                    <div class="field">
                        <div class="label">Usuario</div>
                        <input type="text">
                    </div>
                    <div class="field">
                        <div class="label">Contrasena</div>
                        <input type="password">
                       
                    </div>
                    <div class="field btns">
                        <button class="prev-3 prev">Anterior</button>
                        <button class="Submit">Registrar</button>
                    </div>
                </div>
                
            </form>
        </div>
 
        </div>
        <script src="solicitud.js"></script>
    </body>
</html>










