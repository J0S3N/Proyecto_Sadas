@model Proyecto_Sadas.Models.Solicitud

@{
    ViewData["Title"] = "Registrar";
}

<h1>Registrar</h1>

<h4>Solicitud</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <h4>I. Información de la solicitud</h4>
        <form asp-action="Registrar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="fecha_realiza" class="control-label">Fecha en que se realiza la solicitud: </label>
                <input type="date" asp-for="fecha_realiza" class="form-control" />
                <span asp-validation-for="fecha_realiza" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Tipo de cédula del solicitante</label>
                <select class="form-select" id="tipo-cedula-solicitud">
                    <option selected="selected" disabled="true">Por favor, seleccione una opción</option>
                    <option>Cédula Nacional</option>
                    <option>Padre o Madre Familia</option>
                    <option>Comité Apoyo</option>
                    <option>Docente Apoyo</option>
                    <option>Equipo Regional Itinerante</option>
                    <option>Docente Educacíón Especial</option>
                    <option>Estudiante</option>
                    <option>Otro</option>
                </select>
            </div>
            <div class="form-group">
                <label>Número de cédula de solicitante</label>
                <input type="text" class="form-control" />
            </div>
            <div class="form-group">
                <label>Primer apellido del solicitante</label>
                <input type="text" class="form-control" />
            </div>
             <div class="form-group">
                <label>Segundo apellido del solicitante</label>
                <input type="text" class="form-control" />
            </div>
            <div class="form-group">
                <label>Nombre del solicitante</label>
                <input type="text" class="form-control" />
            </div>
            <div class="form-group">
                <label for="puesto_desenpena" class="form-label mt-4">Puesto que desenpeña</label>
                <select class="form-select" id="puesto_desenpena">
                    <option selected="selected" disabled="true">Por favor, seleccione una opción</option>
                    <option>Docente Regular</option>
                    <option>Padre o Madre Familia</option>
                    <option>Comité Apoyo</option>
                    <option>Docente Apoyo</option>
                    <option>Equipo Regional Itinerante</option>
                    <option>Docente Educacíón Especial</option>
                    <option>Estudiante</option>
                    <option>Otro</option>
                </select>
            </div>
            <div class="form-group">
                <label class="form-label mt-4">Número telefónico #1</label>
                <input type="tel" class="form-control">
            </div>
            <div class="form-group">
                <label class="form-label mt-4">Número telefónico #2</label>
                <input type="tel" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="fecha_recibe" class="control-label">Fecha en que se recibe la solicitud:</label>
                <input type="date" asp-for="fecha_recibe" class="form-control" />
                <span asp-validation-for="fecha_recibe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="sede_recibe" class="control-label">La solicitud se dirige a:</label>
                <select asp-for="sede_recibe" class="form-select" id="sede_recibe">
                    <option selected="selected" disabled="true">Por favor, seleccione una opción</option>
                    <option>DAAT</option>
                    <option>Sede Coto</option>
                    <option>Sede Liberia</option>
                    <option>Sede Limón</option>
                    <option>Sede San Carlos</option>
                </select>
                <span asp-validation-for="sede_recibe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="form-label mt-4">Nombre de la persona que recibe la solicitud</label>
                <div class="form-floating mb-3">
                    <input type="text" class="form-control">
                </div>
            </div>
            <div class="form-group">
                <label asp-for="nombre_persona_recibe" class="control-label"></label>
                <input asp-for="nombre_persona_recibe" class="form-control" />
                <span asp-validation-for="nombre_persona_recibe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="metodo_envio" class="control-label"></label>
                <input asp-for="metodo_envio" class="form-control" />
                <select asp-for="metodo_envio" class="form-select" id="sede_recibe">
                    <option selected="selected" disabled="true">Por favor, seleccione una opción</option>
                    <option>Personalmente</option>
                    <option>Por fax</option>
                    <option>Por correo electrónico</option>
                </select>
                <span asp-validation-for="metodo_envio" class="text-danger"></span>
            </div>
            <h4>II. Información de la persona que requiera la asesoría</h4>
            <div class="form-group">
                <label>Nombre del solicitante</label>
                <input type="text" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="apoyo_organizativo" class="control-label"></label>
                <input asp-for="apoyo_organizativo" class="form-control" />
                <span asp-validation-for="apoyo_organizativo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="producto_apoyo_organizativo" class="control-label"></label>
                <input asp-for="producto_apoyo_organizativo" class="form-control" />
                <span asp-validation-for="producto_apoyo_organizativo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="servicio_apoyo_empleados" class="control-label"></label>
                <input asp-for="servicio_apoyo_empleados" class="form-control" />
                <span asp-validation-for="servicio_apoyo_empleados" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="servicio_apoyo_recibe" class="control-label"></label>
                <input asp-for="servicio_apoyo_recibe" class="form-control" />
                <span asp-validation-for="servicio_apoyo_recibe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="servicio_apoyo_recibe_region_educativa" class="control-label"></label>
                <input asp-for="servicio_apoyo_recibe_region_educativa" class="form-control" />
                <span asp-validation-for="servicio_apoyo_recibe_region_educativa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="apoyo_educativo_requerido" class="control-label"></label>
                <input asp-for="apoyo_educativo_requerido" class="form-control" />
                <span asp-validation-for="apoyo_educativo_requerido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="descripcion_condicion" class="control-label"></label>
                <input asp-for="descripcion_condicion" class="form-control" />
                <span asp-validation-for="descripcion_condicion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="id_centro_Educativo" class="control-label"></label>
                <input asp-for="id_centro_Educativo" class="form-control" />
                <span asp-validation-for="id_centro_Educativo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="id_historial" class="control-label"></label>
                <input asp-for="id_historial" class="form-control" />
                <span asp-validation-for="id_historial" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="solicitud_archivo" class="col-sm-2 col-form-label"></label>
                <div class="mb-3">
                    <label asp-for="solicitud_archivo" for="formFileMultiple" class="form-label">Archivos adjuntos a la Solicitud</label>
                    <input asp-for="solicitud_archivo" class="form-control" type="file" id="formFileMultiple" multiple>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Registrar" class="btn btn-primary" />
                
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Consultar">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
